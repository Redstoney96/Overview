<Window x:Class="Overview.CreateNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Overview"
        mc:Ignorable="d"
        Title="Create Note" Height="226" Width="495" Background="Gray" Icon="/placeholdericon3.png">

    <StackPanel Margin="3" x:Name="mainPanel" Background="#FF545454">
        <TextBox KeyDown="TextBox_KeyDown" x:Name="TextBox" Margin="30" Height="141" Width="425" Background="#FFFFC700" BorderBrush="#FF505050" BorderThickness="3,1,3,3" Text="Note" FontSize="18" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
